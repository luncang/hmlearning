<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:padding="5vp">


        <Button
            ohos:id="$+id:page"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_button"
            ohos:layout_alignment="start"
            ohos:padding="10vp"
            ohos:text="PageAbility"
            ohos:text_color="#333333"
            ohos:text_size="20fp"/>

        <Button
            ohos:id="$+id:service"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_button"
            ohos:layout_alignment="end"
            ohos:padding="10vp"
            ohos:start_margin="30vp"
            ohos:text="ServiceAbility"
            ohos:text_color="#333333"
            ohos:text_size="20fp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:padding="5vp">


        <Button
            ohos:id="$+id:data"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_button"
            ohos:layout_alignment="start"
            ohos:padding="10vp"
            ohos:text="DataAbility"
            ohos:text_color="#333333"
            ohos:text_size="20fp"/>

        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_button"
            ohos:layout_alignment="end"
            ohos:padding="10vp"
            ohos:start_margin="30vp"
            ohos:text="ServiceAbility"
            ohos:text_color="#333333"
            ohos:text_size="20fp"
            ohos:visibility="invisible"/>

    </DirectionalLayout>





</DirectionalLayout>