<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <Button
        ohos:id="$+id:startLocalService"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="启动本地服务"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        />

    <Button
        ohos:id="$+id:stopLocalService"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="停止本地服务"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:connectService"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="连接本地服务"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:disconnectService"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="断开本地服务"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:startTask"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="开启任务"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:cancelTask"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="取消任务"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:end_padding="10vp"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:top_margin="10vp">

        <TextField
            ohos:id="$+id:numA"
            ohos:height="40vp"
            ohos:width="100vp"
            ohos:background_element="$graphic:bg_textfield"
            ohos:hint="请输入数字"
            ohos:text_alignment="center"
            ohos:text_input_type="pattern_number"
            ohos:text_size="20fp"
            ohos:weight="1"/>

        <TextField
            ohos:id="$+id:numB"
            ohos:height="40vp"
            ohos:width="100vp"
            ohos:background_element="$graphic:bg_textfield"
            ohos:hint="请输入数字"
            ohos:start_margin="20vp"
            ohos:text_alignment="center"
            ohos:text_input_type="pattern_number"
            ohos:text_size="20fp"
            ohos:weight="1"/>


    </DirectionalLayout>


    <Button
        ohos:id="$+id:addNumber"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_button"
        ohos:end_margin="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:start_margin="10vp"
        ohos:text="远程服务(加法)"
        ohos:text_color="#ffffff"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />


    <Button
        ohos:id="$+id:jumpToSecondSlice"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="跳转到相同page的slice"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:jumpToSecondSlick"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="跳转到相同page的slice 回传值"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:jumpToOtherFirst"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="跳转到其它page第一个slice"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:jumpToOtherSecond"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="跳转到其它page第二个slice 回传值"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="10vp"
        />


</DirectionalLayout>